{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["vitest/globals", "vitest"]
  },
  "include": [
    "src/**/*.ts",
    "vitest.config.ts",
    ".eslintrc.js"
  ],
  "exclude": ["dist"]
}
